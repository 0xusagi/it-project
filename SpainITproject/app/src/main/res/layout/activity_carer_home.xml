<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarerHomeActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/carerHome_listTitle"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/dependents_list_name"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/carerHome_dependentsList"
        app:layout_constraintStart_toStartOf="@+id/carerHome_dependentsList"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/carerHome_dependentsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carerHome_listTitle">

    </ListView>

    <ImageButton
        android:id="@+id/carerHome_settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_settings_icon"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="8dp" />

</android.support.constraint.ConstraintLayout>